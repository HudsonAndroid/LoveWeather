<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_widget_container"
              android:gravity="center_horizontal"
              android:padding="@dimen/small_margin"
              android:background="@drawable/shape_widget_circle_bg"
              android:layout_width="@dimen/widget_circle_size"
              android:layout_height="@dimen/widget_circle_size">

    <TextView
        android:id="@+id/tv_time"
        android:text="18:17"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="@dimen/widget_desc_text_size"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:src="@drawable/icon_sunny_d"
            android:gravity="start"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="28dp"/>

        <TextView
            android:id="@+id/tv_weather_desc"
            android:layout_weight="1"
            android:text="晴"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_temp"
            android:text="-10℃"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_location"
        android:drawableLeft="@drawable/location"
        android:text="太原"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

</LinearLayout>