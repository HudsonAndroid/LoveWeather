<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_add_country"
        android:src="@drawable/add"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/view_internal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_list_height"/>

    <com.hudson.loveweather.ui.view.customview.ElasticScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_country_container"
            android:transitionName="location"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>

    </com.hudson.loveweather.ui.view.customview.ElasticScrollView>
</LinearLayout>
