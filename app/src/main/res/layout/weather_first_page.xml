<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/view_internal_margin"
        android:textColor="@color/gray"/>

    <LinearLayout
        android:id="@+id/ll_air"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_update_time"
        android:layout_margin="@dimen/view_internal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_air_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_air_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weather_detail"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="@dimen/small_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_temp"
                android:textSize="65sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginLeft="2dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:text="â„ƒ"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/tv_weather_desc"
                    android:textSize="@dimen/weather_text_size"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_body_temp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/weather_text_size"
            android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_hum"
            android:textColor="@android:color/white"
            android:textSize="@dimen/weather_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_wind"
            android:textColor="@android:color/white"
            android:textSize="@dimen/weather_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>